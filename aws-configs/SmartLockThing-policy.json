{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": "iot:Connect",
      "Resource": "arn:aws:iot:eu-central-1:445567088780:client/BackendClient"
    },
    {
      "Effect": "Allow",
      "Action": ["iot:Publish", "iot:Subscribe", "iot:Receive"],
      "Resource": [
        "arn:aws:iot:eu-central-1:445567088780:topic/$aws/things/*",
        "arn:aws:iot:eu-central-1:445567088780:topicfilter/$aws/things/*"
      ]
    }
  ]
}
