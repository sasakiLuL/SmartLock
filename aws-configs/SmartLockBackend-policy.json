{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": "iot:Connect",
      "Resource": "arn:aws:iot:eu-central-1:445567088780:client/BackendClient"
    },
    {
      "Effect": "Allow",
      "Action": "iot:Publish",
      "Resource": "arn:aws:iot:eu-central-1:445567088780:topic/SmartLock/${iot:Connection.Thing.ThingName}/commands"
    },
    {
      "Effect": "Allow",
      "Action": "iot:Subscribe",
      "Resource": [
        "arn:aws:iot:eu-central-1:445567088780:topic/SmartLock/*/states",
        "arn:aws:iot:eu-central-1:445567088780:topic/SmartLock/*/responses"
      ]
    },
    {
      "Effect": "Allow",
      "Action": "iot:Receive",
      "Resource": [
        "arn:aws:iot:eu-central-1:445567088780:topic/SmartLock/*/states",
        "arn:aws:iot:eu-central-1:445567088780:topic/SmartLock/*/responses"
      ]
    }
  ]
}